{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "cypress",
      "node"
    ],
    "noImplicitAny": true,
    "downlevelIteration": true
  },
  "paths": {
    "src/*": [
      "./*"
    ]
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
